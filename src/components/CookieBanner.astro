<script is:inline>
  const STORAGE_KEY = 'cookie-consent';
  const PREFERENCES_KEY = 'cookie-preferences';

  const banner = document.getElementById('cookie-banner');
  const overlay = document.getElementById('cookie-overlay');
  const saved = localStorage.getItem(STORAGE_KEY);

  // Cookie preferences state
  let preferences = {
    essential: true,
    functionality: false,
    performance: false,
    targeting: false
  };

  // Load saved preferences
  const savedPrefs = localStorage.getItem(PREFERENCES_KEY);
  if (savedPrefs) {
    try {
      preferences = { ...preferences, ...JSON.parse(savedPrefs) };
    } catch (e) {
      console.error('Failed to parse cookie preferences');
    }
  }

  // Show banner if no consent saved
  if (!saved) {
    banner.classList.remove('hidden');
  }

  // Initialize toggles
  function initializeToggles() {
    ['functionality', 'performance', 'targeting'].forEach(type => {
      const toggle = document.getElementById(`toggle-${type}`);
      if (toggle && preferences[type]) {
        toggle.classList.add('active');
        toggle.setAttribute('aria-checked', 'true');
      }
    });
  }

  // Toggle functionality
  function setupToggle(type) {
    const toggle = document.getElementById(`toggle-${type}`);
    if (!toggle) return;

    const handleToggle = () => {
      preferences[type] = !preferences[type];
      toggle.classList.toggle('active');
      toggle.setAttribute('aria-checked', preferences[type] ? 'true' : 'false');
    };

    toggle.addEventListener('click', handleToggle);
    toggle.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        handleToggle();
      }
    });
  }

  // Setup provider toggles
  document.querySelectorAll('.show-providers').forEach(btn => {
    btn.addEventListener('click', () => {
      const section = btn.dataset.section;
      const providersList = document.getElementById(`providers-${section}`);
      if (providersList) {
        providersList.classList.toggle('visible');
        const arrow = btn.querySelector('span:last-child');
        arrow.textContent = providersList.classList.contains('visible') ? '▲' : '▼';
      }
    });
  });

  // Set consent
  function setConsent(grantedTypes) {
    // Update Google Analytics consent
    window.gtag?.('consent', 'update', {
      analytics_storage: grantedTypes.performance ? 'granted' : 'denied',
      ad_storage: grantedTypes.targeting ? 'granted' : 'denied',
      ad_user_data: grantedTypes.targeting ? 'granted' : 'denied',
      ad_personalization: grantedTypes.targeting ? 'granted' : 'denied',
      functionality_storage: grantedTypes.functionality ? 'granted' : 'denied',
    });

    // Save preferences
    localStorage.setItem(PREFERENCES_KEY, JSON.stringify(grantedTypes));
    localStorage.setItem(STORAGE_KEY, 'configured');

    // Hide UI
    banner.classList.add('hidden');
    overlay.classList.add('hidden');
  }

  // Accept all
  document.getElementById('accept-all').addEventListener('click', () => {
    preferences = {
      essential: true,
      functionality: true,
      performance: true,
      targeting: true
    };
    setConsent(preferences);
  });

  // Reject all
  document.getElementById('reject-all').addEventListener('click', () => {
    preferences = {
      essential: true,
      functionality: false,
      performance: false,
      targeting: false
    };
    setConsent(preferences);
  });

  // Open detailed modal
  document.getElementById('read-policy').addEventListener('click', (e) => {
    e.preventDefault();
    banner.classList.add('hidden');
    overlay.classList.remove('hidden');
    initializeToggles();
  });

  // Close modal
  document.getElementById('close-modal').addEventListener('click', () => {
    overlay.classList.add('hidden');
    banner.classList.remove('hidden');
  });

  // Save & close
  document.getElementById('save-close').addEventListener('click', () => {
    setConsent(preferences);
  });

  // Setup toggles
  ['functionality', 'performance', 'targeting'].forEach(setupToggle);

  // Close modal on overlay click
  overlay.addEventListener('click', (e) => {
    if (e.target === overlay) {
      overlay.classList.add('hidden');
      banner.classList.remove('hidden');
    }
  });

  // Initialize on load
  initializeToggles();
</script>
