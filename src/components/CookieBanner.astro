  }

  /* Toggle Switch */
  .toggle-switch {
    position: relative;
    width: 48px;
    height: 28px;
    background: #d1d5db;
    border-radius: 14px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .toggle-switch.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .toggle-switch.active {
    background: #7c3aed;
  }

  .toggle-switch::after {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 24px;
    height: 24px;
    background: white;
    border-radius: 50%;
    transition: transform 0.3s;
  }

  .toggle-switch.active::after {
    transform: translateX(20px);
  }

  /* Show Providers */
  .show-providers {
    background: none;
    border: none;
    color: #7c3aed;
    font-size: 0.875rem;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.5rem;
  }

  .show-providers:hover {
    text-decoration: underline;
  }

  .providers-list {
    margin-top: 0.75rem;
    padding: 0.75rem;
    background: #f9fafb;
    border-radius: 8px;
    font-size: 0.875rem;
    color: #4b5563;
    display: none;
  }

  .providers-list.visible {
    display: block;
  }

  .providers-list ul {
    margin: 0.5rem 0 0 0;
    padding-left: 1.5rem;
  }

  /* Action Buttons */
  .cookie-actions {
    padding: 1.5rem 2rem;
    border-top: 1px solid #e5e7eb;
    display: flex;
    gap: 0.75rem;
  }

  .btn {
    flex: 1;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    border: none;
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary {
    background: #7c3aed;
    color: white;
  }

  .btn-primary:hover {
    background: #6d28d9;
  }

  .btn-secondary {
    background: #f3f4f6;
    color: #374151;
  }

  .btn-secondary:hover {
    background: #e5e7eb;
  }

  /* Simple Banner (Initial) */
  .cookie-banner {
    position: fixed;
    bottom: 1rem;
    left: 1rem;
    right: 1rem;
    max-width: 420px;
    margin: auto;
    padding: 1.25rem;
    background: white;
    color: #111827;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    z-index: 9999;
  }

  .banner-title {
    font-weight: 600;
    font-size: 1rem;
    margin: 0 0 0.5rem 0;
  }

  .banner-text {
    color: #4b5563;
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0 0 1rem 0;
  }

  .banner-text a {
    color: #7c3aed;
    text-decoration: underline;
  }

  .banner-actions {
    display: flex;
    gap: 0.5rem;
  }

  .hidden {
    display: none;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .cookie-modal {
      max-height: 95vh;
    }

    .cookie-header,
    .cookie-content,
    .cookie-actions {
      padding-left: 1.25rem;
      padding-right: 1.25rem;
    }

    .cookie-actions {
      flex-direction: column;
    }
  }
</style>

